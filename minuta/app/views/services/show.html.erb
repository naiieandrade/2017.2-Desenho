<section class="content-section" id="alumns-desc">
  <div class="container">
    <div class="pull-right">
        <%= link_to '<span class="fa fa-edit"></span>Editar'.html_safe, edit_service_path(@service), class:"btn btn-sm btn-default" %>

        <%= link_to '<span class="fa fa-times"></span>Excluir'.html_safe, "", method: :delete, class:'btn btn-sm btn-danger', data: { confirm: 'Tem certeza? Essa alteração não pode ser desfeita.'}, name:"delete"  %>
      	<%= link_to '<span class="fa fa-address-card"></span> Voltar'.html_safe, services_path, class:'btn btn-sm btn-warning' %>
    </div>
    <div class="row item">
      <div class="col-sm-12 col-md-4">
        <%= image_tag("avatar_250x300.png", alt: "", class: "img-responsive" ) %>
      </div>
      <div class="col-sm-12 col-md-8 text-capitalize descript">
        <h4 class="">description: <%= @service.description %></h4>
        <h4 class="">Preço: <%= @service.price %></h4>
      </div>
    </div>
  </div>
</section>
